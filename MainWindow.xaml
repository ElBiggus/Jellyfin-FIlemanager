<Window x:Class="FMove.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FMove - Video File Organizer" Height="600" Width="900"
        MinHeight="500" MinWidth="800">
    <TabControl Margin="10">
        <!-- TV Shows Tab -->
        <TabItem Header="TV Shows">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Target Folder -->
                <GroupBox Header="Target Folder" Grid.Row="0" Margin="0,0,0,10">
            <Border x:Name="TargetBorder" 
                    BorderBrush="#CCCCCC" 
                    BorderThickness="2" 
                    Background="#F5F5F5"
                    CornerRadius="5"
                    AllowDrop="True"
                    Drop="TargetBorder_Drop"
                    DragEnter="Border_DragEnter"
                    DragLeave="Border_DragLeave"
                    Height="60">
                <TextBlock x:Name="TargetText" 
                           Text="Drag target folder here..."
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Foreground="#666666"
                           FontSize="14"/>
            </Border>
        </GroupBox>

        <!-- Source Folder -->
        <GroupBox Header="Source Folder" Grid.Row="1" Margin="0,0,0,10">
            <Border x:Name="SourceBorder" 
                    BorderBrush="#CCCCCC" 
                    BorderThickness="2" 
                    Background="#F5F5F5"
                    CornerRadius="5"
                    AllowDrop="True"
                    Drop="SourceBorder_Drop"
                    DragEnter="Border_DragEnter"
                    DragLeave="Border_DragLeave"
                    Height="60">
                <TextBlock x:Name="SourceText" 
                           Text="Drag source folder here..."
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Foreground="#666666"
                           FontSize="14"/>
            </Border>
        </GroupBox>

        <!-- Search Button -->
        <Button x:Name="SearchButton" 
                Content="Search" 
                Grid.Row="2" 
                Width="100" 
                Height="30" 
                HorizontalAlignment="Right"
                Margin="0,0,0,10"
                Click="SearchButton_Click"
                IsEnabled="False"/>

        <!-- Results Grid -->
        <DataGrid x:Name="ResultsGrid" 
                  Grid.Row="3" 
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  Margin="0,0,0,10"
                  HeadersVisibility="Column"
                  GridLinesVisibility="All">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Season" Binding="{Binding Season, UpdateSourceTrigger=PropertyChanged}" Width="80"/>
                <DataGridTextColumn Header="Episode" Binding="{Binding Episode, UpdateSourceTrigger=PropertyChanged}" Width="80"/>
                <DataGridTextColumn Header="Filename" Binding="{Binding Filename}" Width="*" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Show Name -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Show Name:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="Bold"/>
            <TextBox x:Name="ShowNameTextBox" Width="300" Height="25" VerticalContentAlignment="Center"/>
            <TextBlock Text="Operation:" VerticalAlignment="Center" Margin="30,0,10,0" FontWeight="Bold"/>
            <RadioButton x:Name="CopyRadioButton" Content="Copy" VerticalAlignment="Center" IsChecked="True" Margin="0,0,15,0"/>
            <RadioButton x:Name="MoveRadioButton" Content="Move" VerticalAlignment="Center" IsEnabled="False"/>
        </StackPanel>

        <!-- Progress Section -->
        <StackPanel Grid.Row="5" Margin="0,0,0,10" x:Name="ProgressPanel" Visibility="Collapsed">
            <TextBlock x:Name="ProgressText" Text="" Margin="0,0,0,5" FontWeight="SemiBold"/>
            <ProgressBar x:Name="CopyProgressBar" Height="20" Minimum="0" Maximum="100" Value="0"/>
        </StackPanel>

        <!-- Go Button -->
        <Button x:Name="GoButton" 
                Content="Go!" 
                Grid.Row="6" 
                Width="100" 
                Height="35" 
                HorizontalAlignment="Right"
                Click="GoButton_Click"
                IsEnabled="False"
                FontWeight="Bold"
                FontSize="14"/>
            </Grid>
        </TabItem>
        
        <!-- Movies Tab -->
        <TabItem Header="Movies">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Target Folder -->
                <GroupBox Header="Target Folder" Grid.Row="0" Margin="0,0,0,10">
                    <Border x:Name="MoviesTargetBorder" 
                            BorderBrush="#CCCCCC" 
                            BorderThickness="2" 
                            Background="#F5F5F5"
                            CornerRadius="5"
                            AllowDrop="True"
                            Drop="MoviesTargetBorder_Drop"
                            DragEnter="Border_DragEnter"
                            DragLeave="Border_DragLeave"
                            Height="60">
                        <TextBlock x:Name="MoviesTargetText" 
                                   Text="Drag target folder here..."
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Foreground="#666666"
                                   FontSize="14"/>
                    </Border>
                </GroupBox>

                <!-- Source Folder -->
                <GroupBox Header="Source Folder" Grid.Row="1" Margin="0,0,0,10">
                    <Border x:Name="MoviesSourceBorder" 
                            BorderBrush="#CCCCCC" 
                            BorderThickness="2" 
                            Background="#F5F5F5"
                            CornerRadius="5"
                            AllowDrop="True"
                            Drop="MoviesSourceBorder_Drop"
                            DragEnter="Border_DragEnter"
                            DragLeave="Border_DragLeave"
                            Height="60">
                        <TextBlock x:Name="MoviesSourceText" 
                                   Text="Drag source folder here..."
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Foreground="#666666"
                                   FontSize="14"/>
                    </Border>
                </GroupBox>
                
                <!-- Operation Selection -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Operation:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="Bold"/>
                    <RadioButton x:Name="MoviesCopyRadioButton" Content="Copy" VerticalAlignment="Center" IsChecked="True" Margin="0,0,15,0"/>
                    <RadioButton x:Name="MoviesMoveRadioButton" Content="Move" VerticalAlignment="Center"/>
                </StackPanel>
                
                <!-- Progress Section -->
                <StackPanel Grid.Row="3" Margin="0,0,0,10" x:Name="MoviesProgressPanel" Visibility="Collapsed">
                    <TextBlock x:Name="MoviesProgressText" Text="" Margin="0,0,0,5" FontWeight="SemiBold"/>
                    <ProgressBar x:Name="MoviesProgressBar" Height="20" Minimum="0" Maximum="100" Value="0"/>
                </StackPanel>
                
                <!-- Go Button -->
                <Button x:Name="MoviesGoButton" 
                        Content="Go!" 
                        Grid.Row="4" 
                        Width="100" 
                        Height="35" 
                        HorizontalAlignment="Right"
                        Margin="0,0,0,10"
                        Click="MoviesGoButton_Click"
                        IsEnabled="False"
                        FontWeight="Bold"
                        FontSize="14"/>
                
                <!-- Results ListBox -->
                <GroupBox Header="Movie Folders (editable - press Enter or Tab to rename)" Grid.Row="5" Margin="0,0,0,10" x:Name="MoviesResultsGroup" Visibility="Collapsed">
                    <ListBox x:Name="MoviesResultsListBox" 
                             Height="200"
                             ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding DisplayName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                         BorderThickness="0"
                                         Background="Transparent"
                                         KeyDown="MovieFolderTextBox_KeyDown"
                                         LostFocus="MovieFolderTextBox_LostFocus"
                                         Tag="{Binding}"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </GroupBox>
                
                <!-- Placeholder for future Movies functionality -->
                <TextBlock Grid.Row="6" 
                          Text="Additional movie features coming soon..." 
                          VerticalAlignment="Top" 
                          HorizontalAlignment="Center"
                          Margin="0,20,0,0"
                          FontSize="14"
                          Foreground="#999999"/>
            </Grid>
        </TabItem>
    </TabControl>
</Window>
